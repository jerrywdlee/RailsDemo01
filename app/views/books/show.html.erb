<% provide(:title, @book.title) %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Publisher:</strong>
  <%= @book.publisher %>
</p>

<p>
  <strong>ISBN:</strong>
  <%= @book.isbn %>
</p>

<p><button onclick="window.open('http://www.google.com/?rd=ssl#q=ISBN:<%= @book.isbn %>')">Search On Net</button></p>

<p>
  <strong>Genre:</strong>
  <%= @book.genre %>
</p>

<p>
  <strong>Useable:</strong>
  <%= @book.useable %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @book.summary %>
</p>

